<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Ujian.HasilUjianActivity">

    <LinearLayout
        android:layout_weight="0.2"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/score"
            android:layout_width="260dp"
            android:layout_height="280dp"/>

    </LinearLayout>

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
<RelativeLayout
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/reguler"
        android:text="Nilai ujian "
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/mp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/t1"
        android:fontFamily="@font/reguler"
        android:text="---"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/reguler"
        android:text=" kamu"
        android:textAlignment="center"
        android:layout_toRightOf="@id/mp"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>


        <TextView
            android:id="@+id/hasilUjian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/reguler"
            android:text="00"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="38sp"
            android:textStyle="bold" />
</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnGoToMain"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Kembali ke Halaman Utama"
            android:layout_centerInParent="true"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="15dp"
            android:paddingHorizontal="19dp"
            android:fontFamily="@font/reguler"
            android:textStyle="bold"
            android:textSize="14sp"
            android:drawableLeft="@drawable/logout_pic"
            android:drawablePadding="4dp"
            android:background="@drawable/bgnext"
            android:layout_centerVertical="true"
            android:textColor="@color/white"/>
    </RelativeLayout>

</LinearLayout>