<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Keluar"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:paddingHorizontal="19dp"
            android:fontFamily="@font/reguler"
            android:textStyle="bold"
            android:textSize="14sp"
            android:drawableLeft="@drawable/logout_pic"
            android:drawablePadding="4dp"
            android:background="@drawable/bgnext"
            android:layout_centerVertical="true"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/reguler"
            android:text="Profil Pengguna"
            android:textAlignment="center"
            android:textColor="@color/darkblue"
            android:layout_gravity="bottom"
            android:textSize="40sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <ImageView
        android:id="@+id/prof"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@drawable/bgprofil"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingHorizontal="15dp">
            <TextView
                android:id="@+id/n"
                android:text="Username"
                android:fontFamily="@font/reguler"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_toRightOf="@id/n"
                android:id="@+id/prof_user"
                android:text="-"
                android:fontFamily="@font/reguler"
                android:textSize="16sp"
                android:textColor="@color/red"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textAlignment="viewEnd"
                android:layout_alignParentEnd="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="36dp"
            android:background="@drawable/bgprofil"
            android:layout_width="match_parent"
            android:paddingHorizontal="15dp"
            android:layout_height="50dp">
            <TextView
                android:text="NIS"
                android:fontFamily="@font/reguler"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/prof_nis"
                android:text="0000"
                android:fontFamily="@font/reguler"
                android:textSize="16sp"
                android:textColor="@color/red"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="36dp"
            android:background="@drawable/bgprofil"
            android:layout_width="match_parent"
            android:paddingHorizontal="15dp"
            android:layout_height="50dp">
            <TextView
                android:text="Kelas"
                android:fontFamily="@font/reguler"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/prof_kelas"
                android:text="-"
                android:fontFamily="@font/reguler"
                android:textSize="16sp"
                android:textColor="@color/red"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    


</LinearLayout>