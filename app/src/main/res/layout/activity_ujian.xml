<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Ujian.UjianActivity">
    <RelativeLayout
        android:paddingHorizontal="16dp"
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/countDown"
            android:text="--:--"
            android:layout_marginVertical="8dp"
            android:paddingVertical="8dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bgprev"
            android:textColor="@color/darkblue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/k"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="24sp"
            android:layout_marginStart="8dp"
            android:textColor="@color/darkblue"
            android:text="Ujian Kelas "/>
        <TextView
            android:id="@+id/s_kelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_marginRight="6dp"
            android:layout_toRightOf="@id/k"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:textSize="24sp"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/no_soal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="1"
                    android:textAlignment="center"
                    android:background="@drawable/bgno"
                    android:textStyle="bold"
                    android:fontFamily="@font/reguler"
                    android:textSize="20sp"
                    android:layout_marginStart="30dp"
                    android:padding="4dp"
                    />

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0">
                    <ImageView
                        android:paddingHorizontal="8dp"
                        android:id="@+id/img_soal"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:paddingRight="20dp"
                    android:layout_marginVertical="4dp"
                    >
                    <TextView
                        android:id="@+id/txt_soal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/black"
                        android:fontFamily="@font/reguler"
                        android:textSize="15dp"
                        android:gravity="end|start"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="9">
                    <RadioGroup
                        android:layout_marginStart="35dp"
                        android:id="@+id/radio_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jawaban 1"
                            android:fontFamily="@font/reguler"
                            android:onClick="onRadioClick"/>
                        <RadioButton
                            android:id="@+id/b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jawaban 2"
                            android:fontFamily="@font/reguler"
                            android:onClick="onRadioClick"/>
                        <RadioButton
                            android:id="@+id/c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jawaban 3"
                            android:fontFamily="@font/reguler"
                            android:onClick="onRadioClick"/>
                        <RadioButton
                            android:id="@+id/d"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jawaban 4"
                            android:fontFamily="@font/reguler"
                            android:onClick="onRadioClick"/>
                    </RadioGroup>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="5">
        <RelativeLayout
            android:paddingHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btnPrev"
                android:text="Sebelumnya"
                android:fontFamily="@font/reguler"
                android:textColor="@color/red"
                android:background="@drawable/bgprev"
                android:layout_centerVertical="true"
                android:layout_width="130dp"
                android:layout_height="40dp"/>
            <Button
                android:id="@+id/btnNext"
                android:text="Selanjutnya"
                android:fontFamily="@font/reguler"
                android:background="@drawable/bgnext"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="130dp"
                android:layout_height="40dp"/>
            <Button
                android:id="@+id/btnSubmit"
                android:text="Kumpulkan Jawaban"
                android:fontFamily="@font/reguler"
                android:background="@drawable/bgnext"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:layout_width="130dp"
                android:layout_height="40dp"/>
        </RelativeLayout>
        
    </LinearLayout>

</LinearLayout>